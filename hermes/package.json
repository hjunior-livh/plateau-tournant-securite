{
  "name": "hermes",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "./build/main.js",
  "scripts": {
    "clear-public": "rimraf -g ./public/\"**\"/*",
    "clear-build": "rimraf -g ./build/\"**\"/*",
    "clear": "npm run clear-public && npm run clear-build",
    "build-frontend": "tsc --project ./tsconfig.frontend.json",
    "build-backend": "tsc --project ./tsconfig.backend.json",
    "build": "npm run clear && rsync -a --exclude='*.ts' ./src/frontend/ ./public/ && npm run build-frontend && npm run build-backend",
    "start": "node ./build/main.cjs"
  },
  "author": "Hugo JUNIOR",
  "license": "",
  "devDependencies": {
    "@types/chart.js": "^2.9.37",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/sqlite3": "^3.1.8",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "chart.js": "^4.2.1",
    "express": "^4.18.2",
    "rimraf": "^5.0.1",
    "sqlite3": "^5.1.6",
    "ts-node": "^10.9.1"
  }
}
